<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:layout_weight="1"
    android:paddingVertical="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        tools:text="1" />

    <LinearLayout
        android:id="@+id/linear_layout_coin_info"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
    >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view_coin"
            tools:src="@drawable/ic_baseline_person_24"
            app:shapeAppearanceOverlay="@style/Theme.CryptoCoinApp.RoundedShapeableImageView"
            app:strokeWidth="1dp"
            android:scaleType="centerCrop"
            android:layout_height="32dp"
            android:layout_width="32dp"/>

        <TextView
            android:id="@+id/text_view_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="BTC" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 44,000.44"
        android:textAlignment="center"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/text_view_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        tools:text="$ 444,000,440,440" />

</LinearLayout>